{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "outDir": "dist",
      "noImplicitAny": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "rootDirs": [
        "src",
        "tests"
      ],
      "baseUrl": "src",
      "paths": {
        "@/*": [
          "*"
        ]
      },
      "plugins": [
        {
          "transform": "typescript-transform-paths"
        },
        { "transform": "typescript-transform-paths", "afterDeclarations": true }
      ]
    },
    "include": [
      "src",
      "tests"
    ]
  }